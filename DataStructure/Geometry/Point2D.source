<cpp>
template <typename T> class Point2D{
public:
	
	T x, y;
	
	Point2D(){
		x = y = 0;
	}
	
	Point2D(T x, T y){
		this->x = x; this->y = y;
	}
	
	T getDistance(Point2D p){
		T dx = x - p.x, dy = y - p.y;
		return sqrt(dx * dx + dy * dy);
	}
}; // class Point2D<T>
</cpp>

